<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#8e888c"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="  Wide + 0"
            android:onClick="checkButton"
            android:checked="true"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 5 (Overthrow)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 6 (Overthrow)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

        <RadioButton
            android:layout_marginTop="10sp"
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Wide + 7 (Overthrow)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="checkButton"
            />

    </RadioGroup>


</RelativeLayout>