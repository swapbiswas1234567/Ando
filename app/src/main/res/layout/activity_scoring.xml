<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.example.bkbiswas.scoringrunrate.Scoring">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="  BATTING      SCORECARD"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#206d86"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="55sp"
            android:src="@drawable/bat"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamname"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#29a8cf"
            android:textColor="#FFF"
            android:text="   BANGLADESH"
            android:width="185sp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#29a8cf"
            android:textColor="#FFF"
            android:text="0.0 Overs"
            android:width="85sp"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="167/5"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="2sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Swapnil Biswas"
            android:textAlignment="center"
            android:layout_marginLeft="10sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#d7af0e"
            android:width="145sp"/>

        <TextView
            android:id="@+id/score1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#29a8cf"
            android:layout_marginLeft="5sp"
            android:width="110sp"
            android:text="100* (150)"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First"
            android:textAlignment="center"
            android:width="100sp"
            android:textSize="18sp"
            android:textColor="#fc0707"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp">

        <TextView
            android:id="@+id/name2"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="Swapnil Biswas"
            android:textAlignment="center"
            android:layout_marginLeft="10sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#d7af0e"
            android:width="145sp"/>

        <TextView
            android:id="@+id/score2"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#29a8cf"
            android:layout_marginLeft="5sp"
            android:width="110sp"
            android:text="100* (150)"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/targetrun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innings"
            android:textAlignment="center"
            android:width="100sp"
            android:textSize="21sp"
            android:textColor="#fc0707"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        >

        <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="50sp"
        android:text="1"
        android:textSize="30sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="#29a8cf"
        />

        <Button
            android:id="@+id/b2"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="2"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

        <Button
            android:id="@+id/b3"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="3"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15sp"

        >

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="4"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

        <Button
            android:id="@+id/b5"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="5"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

        <Button
            android:id="@+id/b6"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="6"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15sp"
        >

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="7"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

        <Button
            android:id="@+id/b0"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="0"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

        <Button
            android:id="@+id/bNB"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="nb"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="15sp"
        >

        <Button
            android:id="@+id/bBye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="bye"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

        <Button
            android:id="@+id/bWkt"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="wkt"
            android:textSize="30sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="#c11925"
            />

        <Button
            android:id="@+id/bWide"
            android:layout_marginLeft="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50sp"
            android:text="wd"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#29a8cf"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp">


    <Button
        android:id="@+id/bfinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:text="Finish  Innings"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:width="150sp"
        android:textSize="15sp"
        android:background="#dec0e2"/>

    <TextView
        android:id="@+id/thisover"
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#0fa431"
        android:text="This Over: "/>

    </LinearLayout>


</LinearLayout>
