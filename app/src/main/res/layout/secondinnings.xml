<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8e888c"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:text="2nd Innings"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            />

    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#d11a1a"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="EECE"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Openers' Name"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:textAlignment="center"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="20sp"
        >

        <TextView
            android:text="Striker:"
            android:textSize="15sp"
            android:textColor="#eae1e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:textStyle="bold"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#eae1e1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="25sp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#f5eeee"
            android:textAlignment="center"
            android:hint="Player 1"
            android:textColorHint="#483c3c"
            android:textSize="15sp"
            android:singleLine="true"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="20sp"
        >

        <TextView
            android:text="Non Striker:"
            android:textSize="15sp"
            android:textColor="#eae1e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:layout_weight="2"/>

        <EditText
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#eae1e1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="25sp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#f5eeee"
            android:textAlignment="center"
            android:hint="Player 2"
            android:textColorHint="#483c3c"
            android:textSize="15sp"
            android:singleLine="true"
            />


    </LinearLayout>

</LinearLayout>